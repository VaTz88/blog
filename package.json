{
	"name": "blog.vatz88.in",
	"version": "3.0.0",
	"description": "Blog by Vatsal Joshi",
	"author": "Vatsal Joshi",
	"license": "GPL-3.0",
	"keywords": [
		"blog",
		"vatsal",
		"joshi",
		"vatz88"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/vatz88/blog.vatz88.in.git"
	},
	"bugs": {
		"url": "https://github.com/vatz88/blog.vatz88.in/issues"
	},
	"homepage": "https://blog.vatz88.in",
	"scripts": {
		"start": "watch 'yarn build' . --filter=./watch.config.js -p /node_modules/ --ignoreUnreadable --ignoreDotFiles & live-server --quiet",
		"start:nobrowser": "yarn start --no-browser",
		"build": "node ./lib/build-articles.js",
		"test": "echo \"Error: no test specified\""
	},
	"engines": {
		"node": ">=12"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,json,css,md}. !*.min.js": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {
		"rehype-autolink-headings": "^4.0.0",
		"rehype-sanitize": "^3.0.1",
		"rehype-slug": "^3.0.0",
		"rehype-stringify": "^8.0.0",
		"remark-parse": "^8.0.2",
		"remark-rehype": "^7.0.0",
		"unified": "^9.0.0"
	},
	"devDependencies": {
		"eslint": "^7.1.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^1.1.2",
		"lint-staged": "^7.3.0",
		"live-server": "^1.2.1",
		"prettier": "^1.14.3",
		"watch": "^1.0.2"
	}
}
